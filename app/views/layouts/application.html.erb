        <!-- BEGIN CART -->
        <% if current_user %>
        <div class="top-cart-block">
          <div class="top-cart-info">
              <a href="javascript:void(0);" class="top-cart-info-count"><% product_count= get_cart_products.count%> <%= pluralize(product_count,"Item")%></a>
              <a href="javascript:void(0);" class="top-cart-info-value">
                  <% 
                    grand_total = 0
                    get_cart_products.each do |cart_product| 
                        grand_total += cart_product.product_price
                    end%>
                  $<%=grand_total%></a>
          </div>
          <i class="fa fa-shopping-cart"></i>
                        
          <div class="top-cart-content-wrapper">
              <% if get_cart_products.count > 0%>
              <div class="top-cart-content">
                <% initial_height = 50
                   max_height = 250
                get_cart_products.each_with_index do |cart_product,index|
                    initial_height = initial_height*(index+1)
                end
                if initial_height <= max_height
                    height = initial_height
                else
                    height = max_height
                end
                %>
              <ul class="scroller" style="height: <%=height%>px;">
                <% 
                total_price = calculate_total_price(get_cart_products)
                coupon = nil
                if !session[:coupon].nil?
                    coupon = find_by_coupon_code(session[:coupon])
                end

                if !coupon.nil?
                    isValidCoupon = validate_coupon(get_cart_products,coupon, session,total_price) 
                else
                    isValidCoupon = false
                end

                get_cart_products.each_with_index do |cart_product|%>
                <li>
                    <%=link_to image_tag("/frontend/pages/img/cart-img.jpg", :alt => '#{cart_product.product.title}', :width => '37',:height => '34'), admin_product_path(cart_product.product.id)%>
                 
                    <span class="cart-content-count">x <%= cart_product.quantity%></span>
                    <strong><%= link_to cart_product.product.name, admin_product_path(cart_product.product.id) %></strong>
                  <%     
                        if cart_product.has_coupon && isValidCoupon %>
                    <% individual_price = calculate_total(@coupon,cart_product)  %>
                        <em>$<%=individual_price%></em> 
                    <%else
                        individual_price = calculate_total(nil,cart_product)
                         %>
                      <em>$<%=individual_price%></em> 
                    <%end%>
                    
                      <%= link_to cart_product_path(cart_product.id), method: :delete, date: {confirm: "Are you sure?"} do %>
                         
                          <i class="del-goods"></i>
                        <% end%>
                   
                  
                </li>
                  <% end %>
              </ul>
              <div class="text-right">
                  <% cart_products = CartProduct.where("user_id=?",current_user.id) %>

                  <%= link_to "View Cart", cart_products_path, class: "btn btn-default" %>
                  
                  <%= link_to "Checkout", new_order_path, class: "btn btn-primary" %>
                
              </div>
            </div>
              <%else%>
               <div class="top-cart-content">
                  <div class="text-right">Cart is empty!</div>
              </div>
              <% end%>
          </div>            
        </div>
          <% end %>
