<h1> List of Countries </h1>

<table border="1">
    <tr>
        <th>Country Name</th>
        <th>ISO Code (2)</th>
        <th>ISO Code (3)</th>
      
        <th> Action </th>
        
    </tr>
    <%@countries.each do |country|%>
        <tr>
            <td><%= country.name %></td>
            <td><%= country.iso_code_2 %></td>
            <td><%= country.iso_code_3 %></td>
            <td><%= link_to "Show", country_path(country.id)%> | <%= link_to "Edit", edit_country_path(country.id)%> | <%= link_to "Delete", country_path(country.id), method: :delete, data: {confirm: "Are you sure"}%></td>
            
        </tr>
    <% end %>
</table>
<%= link_to "Add Country", new_country_path %>