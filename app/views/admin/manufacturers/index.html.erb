<h1>List of Manufacturers </h1>

<table border="1">
    <tr>
        <th>Manufacturer Name</th>
        <th></th>
        <th></th>
        <th></th>
    </tr>
    <%@manufacturers.each do |manufacturer|%>
    <tr>
        <td><%= manufacturer.name%></td>
        <td><%= link_to "Show", manufacturer_path(manufacturer.id)%></td>
        <td><%= link_to "Edit", edit_manufacturer_path(manufacturer.id)%></td>
        <td><%= link_to "Delete", manufacturer_path(manufacturer.id), method: :delete, data: {confirm: "Are you sure?"}%></td>
    </tr>
    <% end %>
    
</table>
<%= link_to "Add Manufacturer", new_manufacturer_path%>